<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="244dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/card_border"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comAuthor" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/baseline_star_rate_24"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comment" />

    <Button
        android:id="@+id/comDeleteBTN"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginBottom="10dp"
        android:text="UsuÅ„"
        android:textColor="@android:color/black"
        android:background="@drawable/button_background_orange"
        android:backgroundTint="#E1823A"
        app:layout_constraintBottom_toTopOf="@+id/rate"
        app:layout_constraintEnd_toEndOf="@+id/rate"
        app:layout_constraintStart_toStartOf="@+id/rate" />
</androidx.constraintlayout.widget.ConstraintLayout>